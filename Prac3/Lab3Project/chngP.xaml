<Window x:Class="Lab3Project.Adminity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3Project"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="71" Margin="28,36,0,0" Text="Change your password" TextWrapping="Wrap" VerticalAlignment="Top" Width="738" FontFamily="Wide Latin" FontSize="36" Background="#FFE2E2E2" MouseDown="TextBlock_MouseDown"/>
        <TextBox x:Name="PrP" HorizontalAlignment="Left" Height="41" Margin="28,161,0,0" Text="Previous password" TextWrapping="Wrap" VerticalAlignment="Top" Width="738" FontFamily="Wide Latin" FontSize="22"/>
        <TextBox x:Name="P2" HorizontalAlignment="Left" Height="41" Margin="28,280,0,0" Text="Confirm password" TextWrapping="Wrap" VerticalAlignment="Top" Width="738" FontFamily="Wide Latin" FontSize="22"/>
        <TextBox x:Name="P1" HorizontalAlignment="Left" Height="41" Margin="28,217,0,0" Text="New password" TextWrapping="Wrap" VerticalAlignment="Top" Width="738" FontFamily="Wide Latin" FontSize="22"/>

    </Grid>
</Window>
